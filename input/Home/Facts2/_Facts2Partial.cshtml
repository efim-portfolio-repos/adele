    <div class="ingredients-tabs">
        <div class="ingredients-tabs__controls-wrapper">
            <div class="ingredients-tabs__controls-header">
                <div class="_accent">Ingredients</div>
                <div class="_units"><span class="_caption">Per serving</span><br>(mg)</div>
            </div>
            <ul class="ingredients-tabs__controls">
            @foreach (Ingredient ingredient in ViewBag.Ingredients)
            {
                <li class="ingredients-tabs__button-wrapper">
                    <button class="ingredients-tabs__button"> 
                        <span class="ingredients-tabs__button-content">@ingredient.Name <span class="_units">@ingredient.Weight</span></span>
                    </button>
                </li>
            }
            </ul>
            <a href="#" class="button" tabindex="0">download scpecs <span class="_size">(50kb)</span></a>
        </div>
        <div class="ingredients-tabs__tab-wrapper">
        @foreach (Ingredient ingredient in ViewBag.Ingredients)
        {
            <div class="ingredients-tabs__tab">
                <svg style="height: 115px;" viewBox="0 0 1 1">
                    <image class="clip-svg" xlink:href="/assets/images/green-coffee-extract.jpg" height="1" width="1" />
                </svg>
